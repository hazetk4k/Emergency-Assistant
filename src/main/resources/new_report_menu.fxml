<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0"
            fx:controller="com.example.server.Controllers.NewReportCont">

    <Button fx:id="toggleMenuButton" text="☰" prefWidth="230.0" onAction="#toggleMenu"/>

    <VBox fx:id="burgerMenu" style="-fx-background-color: lightgray;" visible="false" prefHeight="390.0"
          prefWidth="230.0" spacing="10" alignment="CENTER" layoutY="30">
        <Button text="К списку заявлений 📋" fx:id="button1" mnemonicParsing="false" onAction="#toReportsList"
                maxWidth="Infinity"/>
        <Button text="К отчетам 📃" fx:id="button2" mnemonicParsing="false"
                onAction="#openSaveDirectory"
                maxWidth="Infinity"/>
        <VBox VBox.vgrow="ALWAYS"/>
        <Button text="Выйти 🚪" fx:id="button3" mnemonicParsing="false" onAction="#toAuthWindow" maxWidth="Infinity"/>
    </VBox>
</AnchorPane>