<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="/css/ReportsStylesheet.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.server.Controllers.NewReportCont">

    <Button fx:id="toggleMenuButton" onAction="#toggleMenu" prefWidth="230.0" text="☰" />

    <TableView fx:id="tableView" styleClass="custom-table" layoutX="18.0" layoutY="34.0" prefHeight="400.0" prefWidth="564.0" AnchorPane.bottomAnchor="5.199999999999989" AnchorPane.rightAnchor="18.0" AnchorPane.topAnchor="34.0">
        <columns>
            <TableColumn fx:id="id" prefWidth="75.0" text="№" />
            <TableColumn fx:id="type" prefWidth="75.0" text="Тип" />
            <TableColumn fx:id="timestamp" prefWidth="75.0" text="Дата и время" />
            <TableColumn id="d" fx:id="place" prefWidth="75.0" text="Место" />
            <TableColumn fx:id="fio" prefWidth="75.0" text="Заявитель" />
            <TableColumn fx:id="wasSeen" prefWidth="75.0" text="Просмотрено" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <VBox fx:id="burgerMenu" alignment="CENTER" layoutY="30" prefHeight="390.0" prefWidth="230.0" spacing="10" style="-fx-background-color: lightgray;" stylesheets="/css/ReportsStylesheet.css" visible="false">
        <Button fx:id="button1" maxWidth="Infinity" mnemonicParsing="false" onAction="#toReportsList" text="К списку заявлений 📋" />
        <Button fx:id="button2" maxWidth="Infinity" mnemonicParsing="false" onAction="#openSaveDirectory" text="К отчетам 📃" />
        <VBox VBox.vgrow="ALWAYS" />
        <Button fx:id="button3" maxWidth="Infinity" mnemonicParsing="false" onAction="#toAuthWindow" text="Выйти 🚪" />
    </VBox>

</AnchorPane>
